{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++14",
                "-Wall",
                "-O2",
                "-shared",
                "-fopenmp",
                "-lstdc++fs",
                "-static-libstdc++",
                "-c",
                "-fpic",
                "-I/usr/include/python3.9",
                "-g",
                "${fileDirname}/main.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Deploy",
            "type": "shell",
            "dependsOn": "build",
            "command": "echo 'DEPLOYING' && g++ -shared -o libontodome.so main.o",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}